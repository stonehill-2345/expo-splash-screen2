{
  "extends": "expo-module-scripts/tsconfig.base",
  "compilerOptions": {
    "outDir": "./build",
    "rootDir": "./src",
    "types": ["node"],
    "typeRoots": [
      "../node_modules/@types"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": false,
    "inlineSources": false,
    "inlineSourceMap": false,
    "declarationMap": false,
    "removeComments": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}

